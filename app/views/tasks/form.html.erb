<div class="container">
  <form action="/tasks" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <label for="title">Title</label>
    <input type="text" name="task[title]" id="title" class="form-control">
    <label for="details">Details</label>
    <input type="text" name="task[details]" id="details" class="form-control">
    <input type="submit" value="Create task" class="btn btn-primary" id="button">
  </form>
</div>
